[user]
	name = chck
	email = shimekiri.today@gmail.com
[include]
  	path = .gitconfig.local
[color]
  	ui = true
[core]
	excludesfile = /Users/chck/.gitignore_global
  	editor = nvim
  	filemode = true
[alias]
  	co = checkout
  	st = status -sb
  	pr = pull --rebase
  	fo = fetch origin
  	ro = rebase origin
  	rc = rebase --continue
  	wd = diff --word-diff
  	gp = grep -n
  	lg = log --graph --pretty=oneline --decorate --date=short --abbrev-commit --branches
  	c = commit -v
	pullall = !git pull --rebase && git submodule update --init --recursive
[push]
  	default = simple
[branch]
  	autosetuprebase = always
[pull]
  	rebase = true
[ghq]
  	root = ~/Works
[url "git@github.com:"]
 	pushInsteadOf = https://github.com/
  	pushInsteadOf = git://github.com/
[url "git@gist.github.com:"]
  	pushInsteadOf = https://gist.github.com/
  	pushInsteadOf = git://gist.github.com/
[submodule]
  	recurse = true
[init]
	defaultBranch = main
[credential]
	helper = osxkeychain
